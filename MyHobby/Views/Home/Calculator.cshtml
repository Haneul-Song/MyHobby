<section class="py-12 bg-white">
    <div class="container mx-auto px-6 md:px-12">
        <h1 class="text-3xl font-bold text-center mb-6">Tutoring Calculator</h1>

        <div class="max-w-lg mx-auto bg-gray-100 p-8 rounded-lg shadow">
            <form id="tutoringCalculatorForm" class="space-y-4">
                <div>
                    <label for="hoursInput" class="block text-lg font-medium text-gray-700">Enter the number of hours:</label>
                    <input type="number" id="hoursInput" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm" required min="1">
                </div>
                <div>
                    <label for="hourlyRate" class="block text-lg font-medium text-gray-700">Hourly Rate ($50/hour):</label>
                    <input type="text" id="hourlyRate" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm" value="50" readonly>
                </div>
                <button type="button" id="calculateButton" class="w-full py-2 px-4 border border-transparent text-lg font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Calculate Total
                </button>
                <div>
                    <label for="totalCost" class="block text-lg font-medium text-gray-700">Total Cost:</label>
                    <output id="totalCost" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm">$0.00</output>
                </div>
            </form>
        </div>
    </div>
</section>



<script src="~/js/tutoringCalculator.js"></script>
